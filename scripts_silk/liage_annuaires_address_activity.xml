<Silk>
<!--Prefixes-->
    <Prefixes>
      <Prefix id="rdf" namespace="http://www.w3.org/1999/02/22-rdf-syntax-ns#"/>
	  <Prefix id="owl" namespace="http://www.w3.org/2002/07/owl#"/>
	  <Prefix id="adb" namespace="http://rdf.geohistoricaldata.org/def/directory#"/>
	  <Prefix id="rdfs" namespace="http://www.w3.org/2000/01/rdf-schema#"/>
	  <Prefix id="locn" namespace="http://www.w3.org/ns/locn#"/>
	  <Prefix id="xsd" namespace="http://www.w3.org/2001/XMLSchema#"/>
	  <Prefix id="dcterms" namespace="http://purl.org/dc/terms/"/>
	  <Prefix id="rda" namespace="http://rdaregistry.info/Elements/a/"/>
    </Prefixes>
	<!--Datasets-->
	<DataSources>
	  <DataSource id="graveurs1" type="sparqlEndpoint"><!--Nom du premier dataset à apparier-->
		  <Param name="pageSize" value="1000"></Param>
		  <Param name="pauseTime" value="0"></Param>
		  <Param name="retryCount" value="3"></Param>
		  <Param name="endpointURI" value="http://DESKTOP-PFPG9LI:7200/repositories/photographes_local"></Param><!--Mettre l'adresse du répertoire GraphDB où se trouvent les données des annuaires-->
		  <Param name="graph" value="http://rdf.geohistoricaldata.org/id/directories/photographes_travail"></Param><!--Mettre l'URI du graphe nommé où se trouvent les données sur lesquelles on travaille-->
		  <Param name="retryPause" value="1000"></Param>
		  <Param name="queryParameters" value=""/>
		  <Param name="login" value=""/>
		  <Param name="entityList" value=""/>
		  <Param name="parallel" value="true"/>
		  <Param name="password" value=""/>
	  </DataSource>
	  <DataSource id="graveurs2" type="sparqlEndpoint"><!--Nom du second dataset à apparier-->
		  <Param name="pageSize" value="1000"></Param>
		  <Param name="pauseTime" value="0"></Param>
		  <Param name="retryCount" value="3"></Param>
		  <Param name="endpointURI" value="http://DESKTOP-PFPG9LI:7200/repositories/photographes_local"></Param><!--Mettre l'adresse du répertoire GraphDB où se trouvent les données des annuaires-->
		  <Param name="graph" value="http://rdf.geohistoricaldata.org/id/directories/photographes_travail"></Param><!--Mettre l'URI du graphe nommé où se trouvent les données sur lesquelles on travaille-->
		  <Param name="retryPause" value="1000"></Param>
		  <Param name="queryParameters" value=""/>
		  <Param name="login" value=""/>
		  <Param name="entityList" value=""/>
		  <Param name="parallel" value="true"/>
		  <Param name="password" value=""/>
	  </DataSource>
	</DataSources>
<!--Links-->
<Interlinks>
	<Interlink id="by-keys">
		<LinkType>owl:sameAs</LinkType>
			<SourceDataset dataSource="graveurs1" var="a">
				<RestrictTo>{ ?a rdf:type adb:Entry } .</RestrictTo>
			</SourceDataset>
			<TargetDataset dataSource="graveurs2" var="b">
				<RestrictTo>{ ?b rdf:type adb:Entry } .</RestrictTo>
			</TargetDataset>
<LinkageRule>
<!--Clé 3 : activity et address -->
<!--
Conserve tous les cas où le score minimal de la combinaison de propriété Activity-Address est supérieur à 0
-->
<Aggregate id="min_activity_address" weight="1" type="min">
<!--
Pour deux entrées : calcule la distance qGrams entre les noms de rues
-->
	<Compare id="qg_1" weight="1" metric="qGrams" threshold="0.0">
		<TransformInput id="lowerCase_1" function="lowerCase">
			<Input id="source_streetname" path="?a/locn:thoroughfare"/>
		</TransformInput>
		<TransformInput id="lowerCase_2" function="lowerCase">
			<Input id="target_streetname" path="?b/locn:thoroughfare"/>
		</TransformInput>
	</Compare>
<!--
Pour deux entrées : vérifie l'égalité des numéros de rues
-->
	<Compare id="eq_2" weight="1" metric="equality" threshold="0.0">
		<TransformInput id="lowerCase_3" function="lowerCase">
			<Input id="source_numvoie" path="?a/locn:locatorDesignator"/>
		</TransformInput>
		<TransformInput id="lowerCase_4" function="lowerCase">
			<Input id="target_numvoie" path="?b/locn:locatorDesignator"/>
		</TransformInput>
	</Compare>
<!--
Pour deux entrées : calcule la distance tokenwise entre les valeurs de la propriété activity
-->
	<Compare id="tokenwiseDistance_activity" weight="1" metric="tokenwiseDistance" threshold="0.0">
		<TransformInput id="lowerCase_5" function="lowerCase">
			<Input id="source_activity" path="?a/rda:P50104"/>
		</TransformInput>	
	<TransformInput id="lowerCase_6" function="lowerCase">
			<Input id="target_activity" path="?b/rda:P50104"/>
		</TransformInput>
	</Compare>
</Aggregate>
</LinkageRule>
<Filter limit="25"/>
<Outputs>
<Output type="file" minConfidence="0.00">
<!--
Fichier RDF où sont sauvegardés les liens sameAS "sûrs" pour lesquels la confiance est supérieure ou égale à 0.0
-->
<Param name="file" value="activityaddress_accepted_links_00.nt"/>
<Param name="format" value="ntriples"/>
</Output>
</Outputs>
</Interlink>
</Interlinks>
</Silk>
